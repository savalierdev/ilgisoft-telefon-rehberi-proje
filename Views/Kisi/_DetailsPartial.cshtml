@model TelefonRehberi.Models.Kisi

<div class="modal-header">
    <h5 class="modal-title poppins-medium">Kişi Detayları</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body poppins-regular">
    <dl class="row">
        <dt class="col-sm-4 poppins-regular">
            @Html.DisplayNameFor(model => model.Ad)
        </dt>
        <dd class="col-sm-8 poppins-light">
            @Html.DisplayFor(model => model.Ad)
        </dd>
        <dt class="col-sm-4 poppins-regular">
            @Html.DisplayNameFor(model => model.Soyad)
        </dt>
        <dd class="col-sm-8 poppins-light">
            @Html.DisplayFor(model => model.Soyad)
        </dd>
        <dt class="col-sm-4 poppins-regular">
            Telefon Numarası
        </dt>
        <dd class="col-sm-8 poppins-light">
            @Html.DisplayFor(model => model.TelefonNumarasi)
        </dd>
    </dl>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-dark poppins-regular" data-bs-dismiss="modal">Kapat</button>
    <a href="@Url.Action("Edit", "Kisi", new { id = Model.KisiId })" class="btn btn-dark modal-link poppins-regular">Düzenle</a>
</div>
